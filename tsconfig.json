{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "app",
    "typeRoots": [
        "types"
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "build"]
}
